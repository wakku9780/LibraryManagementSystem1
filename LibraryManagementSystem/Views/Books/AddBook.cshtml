@model LibraryManagementSystem.Models.Book

<form asp-action="AddBook" method="post">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ISBN"></label>
        <input asp-for="ISBN" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="PublishedDate"></label>
        <input asp-for="PublishedDate" class="form-control" type="date" required />
    </div>
    <div class="form-group">
        <label asp-for="AvailableCopies"></label>
        <input asp-for="AvailableCopies" class="form-control" type="number" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Book</button>
</form>
