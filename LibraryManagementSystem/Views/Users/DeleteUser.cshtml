@model LibraryManagementSystem.Models.User

<h2>Delete User</h2>

<div>
    <h4>Are you sure you want to delete this user?</h4>
    <h4>@Model.Name</h4>
    <strong>Email:</strong> @Model.Email <br />
    <strong>Phone Number:</strong> @Model.PhoneNumber
    <form asp-action="DeleteConfirmed" asp-route-id="@Model.UserId" method="post">
        <input type="hidden" asp-for="UserId" />  <!-- Pass the ID properly -->
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" href="@Url.Action("Index", "Books")">Cancel</a>
    </form>
</div>




